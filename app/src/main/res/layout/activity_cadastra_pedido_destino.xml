<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
            android:id="@+id/btn_nucleo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="NÃºcleo"
            android:textColor="@android:color/white"
            android:background="@drawable/square_button_normal"
            app:layout_constraintVertical_bias="0.01"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="@dimen/espacamento_curto"
    />

    <Button
            android:id="@+id/btn_obra"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Obra"
            android:textColor="@android:color/white"
            android:background="@drawable/square_button_normal"
            app:layout_constraintVertical_bias="0.01"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginRight="@dimen/espacamento_curto"
    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_obra"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/espacamento_medio"
    >

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>