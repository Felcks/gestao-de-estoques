<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
            android:id="@+id/btn_listar_materiais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listar materiais"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
            android:id="@+id/btn_cadastrar_entrega_materiais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar entrega de materiais"
            app:layout_constraintTop_toBottomOf="@id/btn_listar_materiais"
            app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>